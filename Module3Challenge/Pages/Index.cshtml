@page
@model IndexModel
@{
    ViewData["Title"] = "Zoo Visitors App";
}

<h1>Welcome to the Zoo Visitors App</h1>

<form method="post">
    
    <label>Enter the animal's hunger level (1-10):</label>
    <input type="number" name="hungerLevel" min="1" max="10" />

    <br><br>

    <label>Enter the day of the week (1-7, where 1 is Sunday):</label>
    <input type="number" name="dayOfWeek" min="1" max="7" />

    <br><br>
    
    <!-- Add a button element here with type="submit" that says "Submit" -->
    <button type="submit">Submit</button>

</form>

<!-- Add an if statement here to check if Model.HungerMessage is not empty -->
<!-- If it's not empty, display the three messages in paragraphs or divs -->
<!-- Display Model.HungerMessage, Model.SoundMessage, and Model.DayMessage -->
@if (Model.HungerMessage is { Length: > 0 }) 
{
    <div>
        <p><strong>@Model.HungerMessage</strong></p>
        <p>@Model.SoundMessage</p>
        <p>@Model.DayMessage</p>
    </div>
}